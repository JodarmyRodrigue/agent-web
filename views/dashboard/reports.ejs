<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include('../blocks/stylesheets'); %>
</head>

<body>
  <%- include('../blocks/navbar'); %>

  <div class="content"
    style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin: 30px 60px; height: 100%;">
    <h1><%= title %></h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nom</th>
          <th scope="col">Prénom</th>
          <th scope="col">Résultat</th>
          <th scope="col">Ville-Village</th>
        </tr>
      </thead>
      <tbody>

        <% for( let index = 0; index < reports.length; index++ ) { %>
          <tr>
            <th scope="row"> <%= reports[index].first_name %> </th>
            <td> <%= reports[index].last_name %> </td>
            <td> <%= reports[index].result %> </td>
            <td> <%= reports[index].city_town %> </td>
          </tr>
          <% } %>

      </tbody>
    </table>
  </div>

  <%- include('../blocks/javascripts'); %>
</body>

</html>