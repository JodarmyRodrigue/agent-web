<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include('../blocks/stylesheets'); %> 
</head>

<body>
  <%- include('../blocks/navbar'); %> 

  <div class="content" style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin: 30px 60px; height: 100%;">
    <h1><%= title %></h1>
    <form>
        <div class="form-group">
          <label for="username">Nom d'utilisateur</label>
          <input type="text" class="form-control" id="username" placeholder="Placeholder" required>
        </div>
        
        <div class="form-group">
            <label for="email">Adresse Email</label>
            <input type="email" class="form-control" id="email" placeholder="Placeholder" required>
          </div>
          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" required>
          </div>
          <div class="form-group">
            <label for="password2">Confirmez votre mot de passe</label>
            <input type="password" class="form-control" id="password2" required>
          </div>
          <div class="form-group">
            <label for="occupation">Votre Poste</label>
            <input type="text" class="form-control" id="occupation" placeholder="Placeholder" required>
          </div>
        <button type="submit" class="btn btn-primary">Changer</button>
      </form>
  </div>

  <%- include('../blocks/javascripts'); %> 
</body>

</html>